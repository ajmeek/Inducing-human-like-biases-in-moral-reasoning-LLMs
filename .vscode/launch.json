    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/main.py",
            "args": [
        "--train_all", "1",
        "--ds1.train.batch_size", "10",
        "--ds2.train.batch_size", "10",
        "--ds1.train.slicing", "[:100]",
        "--ds2.train.slicing", "[:100]",
        "--has_learning_rate_decay", "1",


            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Launch-Checkpoint",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/main.py",
            "args": [
                "--to_save_model",
                "--max_epochs",
                "1",
                "--ds1.train.slicing",
                "[:10]",
                "--ds2.train.slicing",
                "[:10]",
                "--checkpoint_path",
                "artifacts/model-2023-09-20T1649.ckpt"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}